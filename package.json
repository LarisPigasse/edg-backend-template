{
  "name": "@edg/backend-template",
  "version": "1.0.0",
  "description": "EDG Backend Template - Base riutilizzabile per microservizi",
  "main": "dist/app.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/app.ts",
    "build": "tsc",
    "start": "node dist/app.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "db:sync": "DB_SYNC=true npm run dev",
    "clean": "rm -rf dist",
    "create-service": "node scripts/create-service.js"
  },
  "keywords": [
    "edg",
    "backend",
    "template",
    "microservice",
    "express",
    "typescript",
    "mysql",
    "sequelize"
  ],
  "author": "EDG Team",
  "license": "PRIVATE",
  "dependencies": {
    "express": "^5.1.0",
    "cors": "^2.8.5",
    "helmet": "^8.1.0",
    "express-rate-limit": "^7.4.1",
    "dotenv": "^16.4.7",
    "sequelize": "^6.37.7",
    "mysql2": "^3.14.0",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.1",
    "@types/cors": "^2.8.17",
    "@types/node": "^22.14.0",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "eslint": "^9.15.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "supertest": "^7.0.0",
    "@types/supertest": "^6.0.2",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
